/* 懒人早读 头部信息 */
.index-container{position: fixed;top: 0rpx;left: 0rpx; height: 185rpx;width: 100vw; background: #2f7af1;z-index: 99;}
.index-head{height: 5rpx; width: 30vw;padding-left: 60rpx;}
.index-title{color: #fff; font-weight: bold;letter-spacing: 8rpx;}
.index-flush{color: #fff; font-size: 12px;letter-spacing: 4rpx;}
.img-show{height: 200rpx; width:300rpx;float: right;}

/* 懒人早读 导航列表 */
.tab{height: 140rpx;width: 100%; overflow: hidden;line-height: 40rpx;background: #F7F7F7; font-size: 16px; white-space: nowrap;position: fixed;top: 150rpx;left: 0rpx; z-index: 99;border-radius: 20px 20px 0px 0px;}
.tab-title{display: flex;margin: 0rpx 36rpx;display: inline-block;}
.img-tab{height: 80rpx;width: 80rpx;}
.tab-item.active{color: #4675F9;position: relative;}

/* 懒人早读 内容区域 */
.tab-content{margin-top: 290rpx;}
.item-content{font-size: 12px;display: flex;justify-content: space-between;box-sizing: border-box; height: 8vh;align-items: center;border-bottom: 1px solid #F2F2F2;}
.item-left{padding-left: 15px;}
.item-middle{width: 70%;
  /* display: flex;justify-content: center;align-items: center; */
  display: -webkit-box;overflow: hidden;text-overflow: ellipsis;word-break: break-all;-webkit-box-orient: vertical;-webkit-line-clamp: 2;}
.item-right{padding-right: 15px;}

  /* 懒人早读 下拉刷新 */
  .lzy-loading{
    margin-right: 20rpx;
    float: left;
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    border: 1px solid #f0f0f0;
    border-left: 1px solid #6190E8;
    animation: load 1s linear infinite;
    -webkit-animation: load 1s linear infinite;
  }
  @-webkit-keyframes load
  {
    from{-webkit-transform:rotate(0deg);}
    to{-webkit-transform:rotate(360deg);}
  }
  @keyframes load
  {
    from{transform:rotate(0deg);}
    to{transform:rotate(360deg);}
  }