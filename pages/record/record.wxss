/* pages/record/record.wxss */
/* 反馈选项 */
.flex-row{width: 100%; height: 26vh; padding-top: 40rpx; display: flex;flex-direction: row;justify-content: space-around;flex-wrap: wrap;}
.flex-view-item{height:80px;width: 120px;background-color: #f8f9fd;border-radius: 20rpx;}
.model{padding-left: 50rpx;}
.reasonImg{width: 80rpx;height: 80rpx;display: block;padding-left: 10px;}
.reason{color: #a5acc0;}

/* 反馈内容 */
.middle{height: 36vh;width: 100%;}
.record{font-size: 20px;font-weight: 500;padding-bottom: 20rpx;}
.recordContent{background-color: #f8f9fd;width: 100%;height: 87%;border-radius: 25rpx;}
.wordwrap{position:absolute;top: 61vh;right: 0rpx;}

/* 联系方式 */
.bottom{height: 29vh;width: 100%;}
.concact{padding-top: 30rpx;font-size: 20px;font-weight: 500;padding-bottom: 30rpx;}
.communication{font-size: 14px;color: #b9bece;}
.concactContent{margin-top: 10rpx;margin-bottom: 20rpx; height: 120rpx; background-color: #f8f9fd;width: 100%;border-radius: 25rpx;}

/* 按钮 */
.commit{background-color: #2f7af1 !important;}
.commitContent{color: #fff;border-radius: 30rpx;}